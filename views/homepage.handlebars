{{#each listings as |listing| }}
<div class="listing-container mb-4">
	
	<div class="card">
		<div class="card-header">
			<h2>{{listing.name}}</h2>
			<small class="location"><i class="bi bi-geo-alt-fill"></i> {{listing.location}}</small>
		</div>
		<div class="card-body">
			<div class="container-fluid">
				<div class="row">
				<div class="col d-flex justify-content-center mb-4">
					<img class="listing-image" src="{{listing.image.url}}" alt="{{listing.image.description}}"/>
				</div>
				<p class="col">{{listing.description}}</p>
				</div>
			</div>
		</div>
		<div class="mb-4 d-flex justify-content-center">
			<a class="btn btn-outline-primary" href="/listing/{{listing.listing_id}}">View</a>
		</div>
	</div>
	
</div>
{{/each}}
